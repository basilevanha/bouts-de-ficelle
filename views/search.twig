{# see `archive.twig` for an alternative strategy of extending templates #}
{% extends "base.twig" %}


{% block main %}
	<div class="container search-page post-type-{{post.post_type}}" id="post-{{post.ID}}">

		<h1>Résultat(s) pour : <span class="query">{{ posts.query.query.s }}</span></h1>

		{% if posts is not empty %}
			{% for post in posts %}
				{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
			{% endfor %}

		{% else %}
			<h2>Désolé, nous n'avons rien trouvé correspondant à votre recherche.</h2>
		{% endif %}
	</div>
	<!-- /content-wrapper -->
{% endblock %}
