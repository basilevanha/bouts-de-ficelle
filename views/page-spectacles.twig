{% extends "base.twig" %}

{% set template = 'spectacles' %}

{# Variables disponibles :
		{{ dump(hero) }}
		{{ dump(spectacles) }}
 #}

   {% set heroDatas = {
	paragraphDatas: {
		title: hero.titre,
		text: hero.texte,
		btns: [
			{
				label: hero.btn.label,
				url: hero.btn.url
			}
		]
	},
	revert: true,
	img: hero.img,
 } %}


{% block main %}

	<div class="container post-type-{{post.post_type}}" id="post-{{post.ID}}">

		{% if (global.highlight.toggle == true) %}
			{% include 'modules/highlight.twig' with {event: global.highlight} %}
		{% endif %}

		<div class="section--hero">
			{% include 'partials/image-text.twig' with heroDatas %}
		</div>

		<div class="section--spectacles">
			<h2 class="h2">{{ liste.titre }}</h2>
			{% include 'partials/cards-list.twig' with {cards: spectacles} %}
		</div>
	</div>
	<!-- /content-wrapper -->
{% endblock %}
