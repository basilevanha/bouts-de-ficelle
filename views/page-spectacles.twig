{% block main %}

	<div class="container post-type-{{post.post_type}}" id="post-{{post.ID}}">

		BIENVENUE SUR LA PAGE SPECTACLES
		
		<h1>HERO</h1>
		<p>{{ hero.titre }}</p>
		<p>{{ hero.texte }}</p>
		<img src="{{ hero.img.url }}" alt="{{ hero.img.alt }}">
		<p>{{ hero.btn.label }}</p>
		<p>{{ hero.btn.url }}</p>

		<h1>Nos Spectacles</h1>
		<p>{{ liste.titre }}</p>
		
		<ul>
			{% for spectacle in spectacles %}
				<li>
					{{spectacle.id}}
					{{spectacle.title}}
					{{spectacle.img.alt}}
					{{spectacle.img.url}}
					{{spectacle.wysiwyg}}
				</li>
			{% endfor %}
		</ul>
	</div>
	<!-- /content-wrapper -->
{% endblock %}
