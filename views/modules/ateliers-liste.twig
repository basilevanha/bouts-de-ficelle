{# Macros #}
{% import 'atoms/icon.twig' as icon %}

{# 
    items: []
 #}

<div class="ateliers-liste">
    <ul class="ateliers-liste__items">
        {% for item in items %}
            <li class="ateliers-liste__item">
                <a href="{{ item.post.guid }}">
                    {{ icon.sprite(item.icon, 45, 45, 'icone de' ~ item.icon, site.theme.link ) }}
                    <span class="ateliers-liste__item__text">{{ item.post.title }}</span>
                    {# {{ icon.sprite('arrow', 50, 20, 'icone de fl√®che vers la droite', site.theme.link ) }} #}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>