{# 
    img: imgObject
    title: string
    description: string
    btn: button object
 #}

<div class="card">
    <div class="card__img">
        <img src="{{ img.src }}" alt="{{ img.alt }}">
    </div>
    <div class="card__infos">
        <p class="card__infos__title h3">{{ title }}</p>
        <p class="card__infos__description">{{ description }}</p>
        <div class="card__infos__btn">
	    	{% include 'components/button.twig' with btn %}
        </div>
    </div>
</div>