{% extends "base.twig" %}

{% set template = 'cours-stages' %}

{# Variables disponibles :
		{{ dump(hero) }}
		{{ dump(offres) }}
		{{ dump(gouts) }}
		{{ dump(spectacle) }}
 #}

{% set heroDatas = {
	paragraphDatas: {
		title: hero.titre,
		text: hero.texte,
		btns: [
			{
				label: hero.btn.label,
				url: hero.btn.url
			}
		]
	},
	img: hero.img,
	ratioImg: 120
 } %}

 {% set goutsDatas = {
	paragraphDatas: {
		title: gouts.titre,
		text: gouts.texte,
	},
	img: gouts.img,
	revert: true
 } %}

  {% set spectacleDatas = {
	paragraphDatas: {
		title: spectacle.titre,
		text: spectacle.texte,
	},
	img: spectacle.img,
 } %}

{% block main %}

	<div class="container post-type-{{post.post_type}}" id="post-{{post.ID}}">

		{% include 'partials/image-text.twig' with heroDatas %}


		<h1>OFFRES</h1>
		<p>{{ offres.titre }}</p>
		<p>{{ offres.texte }}</p>
		<img src="{{ offres.img.url }}" alt="{{ offres.img.alt }}">

		{% for carte in offres.cartes %}
			<ul>
				<li>{{ carte.titre }}</li>
				<li>{{ carte.prix }}</li>
				<li>{{ carte.unite }}</li>
				<li>{{ carte.horaire }}</li>
				<li>{{ carte.personne }}</li>
				<li>{{ carte.calendrier }}</li>
			</ul>
		{% endfor %}

		<div class="paragraph--gouts">
			{% include 'partials/image-text.twig' with goutsDatas %}
		</div>

		<div class="paragraph--spectacle">
			{% include 'partials/image-text.twig' with spectacleDatas %}
		</div>
	</div>
	<!-- /content-wrapper -->
{% endblock %}